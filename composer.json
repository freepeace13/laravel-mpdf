{
    "name": "freepeace/laravel-mpdf",
    "description": "Laravel package wrapper for mpdf",
    "keywords": [
        "freepeace",
        "laravel-mpdf"
    ],
    "homepage": "https://github.com/freepeace/laravel-mpdf",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Kin Basco",
            "email": "freepeace13@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/contracts": "^8.0|^9.0|^10.0",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "mpdf/mpdf": "^8.2"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0|^7.0|^8.0",
        "orchestra/canvas": "^8.12",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Freepeace\\LaravelMpdf\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Freepeace\\LaravelMpdf\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
